{
/*
	// Place your snippets for C++ here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	"Print to console": {
		"prefix": "log",
		"body": [
			"console.log('$1');",
			"$2"
		],
		"description": "Log output to console"
	}
*/
	"interface comment": {
		"prefix": "interface comment",
		"body": [
			"  //-----------------------------------------------------",
			"  // Preconditions:",
			"  // ",
			"  //   - ${1:}",
			"  // ",
			"  //-----------------------------------------------------",
			"  // Postconditions:",
			"  // ",
			"  //   - ${2:}",
			"  // ",
			"  //-----------------------------------------------------",
			"  // Returns",
			"  // ",
			"  //   - ${3:}",
			"  // ",
			"  ///////////////////////////////////////////////////////",
			""
		],
		"description": "Specify the interface for a function or method."
	}

	"include": {
		"prefix": "include guard",
		"body": [
			"#ifndef ${1:}",
			"#define ${1:}",
			"",
			"${2:your code}",
			"",
			"#endif // ${1:}"
		]
	}

	"header": {
		"prefix": "header comment",
		"body": [
			"/**********************************************************",
			"File Name : $TM_FILENAME",
			"Author    : Sean Collins",
			"Email     : sgc29@zips.uakron.edu",
			"Date      : ${1:Today's Date}",
			"Purpose   : ${2:Purpose of File}",
			"***********************************************************/"
		],
		"description": "Insert a header comment for the current file."
	}

	"main function": {
		"prefix": "int main",
		"body": [
			"int main (int argc, char** argv)",
			"{",
			"  ${1:body}",
			"  return 0;",
			"}",
			""
		],
		"description": "Insert an empty main function."
	}

	"class definition": {
		"prefix": "class",
		"body": [
			"class ${1:class name} ${2:inheritance}",
			"{",
			"public:",
			"  ${1:class name} ();",

			"private:",
			"  ${3:member data}",
			"};",
			""
		],
		"description": "Insert new class definition."
	}
}